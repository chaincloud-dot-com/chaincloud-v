<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/fl_output_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_touchable_bg"
                android:foreground="@drawable/dropdown_ic_arrow_selector"
                android:foregroundGravity="bottom|right">

                <TextView
                    android:id="@+id/tv_output_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="15sp" />
            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/tv_output_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:text="{fa-btc}" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="15dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/transparent_dark_slight"></View>
</LinearLayout>
